@model Pie
<h3> @Model.Name</h3>
    
<div class="thumbnail">
    <img src="@Model.ImageThumbnailUrl" alt="@Model.Name">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a>@Model.Name</a>
        </h3>
        <h4>@Model.LongDescription</h4>
        <p>@Model.ShortDescription</p>
    </div>
</div>
    