@model Pie
<h3>www @Model.Name</h3>
    
<div class="thumbnail">
    <img src="@Model.ImageThumbnailUrl" height="50" width="50" alt="@Model.Name">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a>@Model.Name</a>
        </h3>
        <h4>@Model.LongDescription</h4>
        <p>@Model.ShortDescription</p>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="Cart"
                   asp-action="AddToCart"
                   asp-route-id="@Model.PieId">Add</a>
            </p>
        </div>
    </div>
</div>
    