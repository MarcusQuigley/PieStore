@model PieShopSite.ViewModels.PiesListViewModel
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"
</head>
<body>
    @Model.CurrentCategory
    @foreach (var pie in Model.Pies)
    {
        <div>
            <h2>@pie.Name</h2>
            <h2>@pie.Price.ToString("c")</h2>
            <h2>@pie.Category.Name</h2>
        </div>
    }
</body>
</html>