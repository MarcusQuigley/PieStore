@model IEnumerable<Category>
<li class="dropdown">
    <a asp-controller="Pie"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Pies<b class="claret"</b></a>
    <ul class="dropdown-menu">
        @foreach(var item in Model)
        {
            <li>
                <a asp-controller="Pie" 
                   asp-action="List"
                   asp-route-category="@item.CategoryName">@item.CategoryName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Pie"
               asp-action="List"
               asp-route-category="">View all pies</a>
        </li>
    </ul>
</li>